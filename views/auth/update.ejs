<section>

    <h1> Update Account </h1>
</div>


    <form   method="POST" action="/auth/update" class="form-control updateAccount">
        <input type="hidden" name="userType" class="form-control" value="<%= currentUser.userType %>" />  

        <input type="hidden" name="_id" class="form-control" value="<%= currentUser._id %>" />       
        <div class="form-group">
            <label>First Name</label>
            <input type="text" name="firstName" class="form-control" value="<%= currentUser.firstName %>" />
        </div>
    
        <div class="form-group">
            <label>Last Name</label>
            <input type="text" name="lastName" class="form-control" value="<%= currentUser.lastName %>"/>
        </div>
    
        <div>
            <label class="form-group">Email Address</label>
            <input type="email" name="emailAddress" class="form-control" value="<%= currentUser.emailAddress %>"/>
        </div>

        <button type= "submit"> Update </button>

    </form> 
    

</section>