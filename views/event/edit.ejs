
    
        
 <img  class="imgartist" src="../image/<%=event.eventPhoto%>">

 <h1>Update Event Details </h1>
 
 <form class="form-control" id="createAccount" method="POST" action="/event/update"  enctype="multipart/form-data" >
      <div class="form-group">
        
            <label>Event Name</label>
            <input  class="form-control" type="text" name="name" value="<%= event.name%>"/>
        </div>
    
        <div class="form-group">
            <label>Event Venue</label>
            <input class="form-control" type="text" name="venue" value="<%= event.venue%>" />
        </div>
         

        <div class="form-group">
            <label>Address Line 1 </label>
            <input class="form-control" type="text" name="addressLine1" value="<%= event.addressLine1%>" />
        </div>
    
        <div class="form-group">
            <label>City </label>
            <input  class="form-control" type="text" name="city" value="<%= event.city%>" />
        </div>
    
        
        <div class="form-group">
            <label>Postcode </label>
            <input class="form-control" type="text" name="postcode" value="<%= event.postcode%>" />
        </div>
    
        <div class="form-group">
            <label>Date and Time </label>
            <input class="form-control" type="datetime-local" name="date" value="<%=event.date%>" />
        </div>

        
<div class="form-group">
    <fieldset >
        <legend>Line-Up</legend>
        <div>
            <% event.artist.forEach(function(artist) {     %> 
            <input class="form-control" type="checkbox"  name="artist[]" checked value="<%=artist._id%>">
            <label><%= artist.bandName %></label>
            </div>
<% }) %>
</fieldset>
        <div class="form-group">
            <label>Event Details</label>
            <textarea  class="form-control" type="textarea" name="description" value="<%=event.description%>">"<%=event.description%>"</textarea>
        </div>
         
        <input type="hidden" name="id" value="<%= event._id %>"/>
        <button button class="btn btn-primary"> Update Event </button>

</form> 