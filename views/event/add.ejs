
 <h1>Create Event </h1>       
        
 <form  id="createAccount" method="POST" action="/event/add"  enctype="multipart/form-data" >
      <div>
            <label>Event Name</label>
            <input type="text" name="name"/>
        </div>
    
        <div>
            <label>Event Venue</label>
            <input type="text" name="venue" />
        </div>
         

        <div>
            <label>Address Line 1 </label>
            <input type="text" name="addressLine1" />
        </div>
    
        <div>
            <label>City </label>
            <input type="text" name="city" />
        </div>
    
        
        <div>
            <label>Postcode </label>
            <input type="text" name="postcode" />
        </div>
    
        <div>
            <label>Date and Time </label>
            <input type="datetime-local" name="date" />
        </div>

        
<div>
 
    <fieldset >
        <legend>Line-Up</legend>
        <div>
            <% artist.forEach(function(artist) {     %> 
            <input type="checkbox"  name="artist[]" value="<%= artist._id %>">
            <label><%= artist.bandName %></label>
</div>
<% }) %>
</fieldset>
        <div>
            <label>Event Details </label>
            <textarea type="textarea" name="description"></textarea>
        </div>
         
        <div>
            <label for="eventPhoto"> Event Image</label>
            <input type="file" id="eventPhoto" name="eventPhoto">
        </div>
        
        

        <button type= "submit"> Create Event </button>

</form> 